<p id="notice"><%= notice %></p>

<h1>Listing Hdds</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Maker</th>
      <th>Series</th>
      <th>Model</th>
      <th>Size</th>
      <th>Interface</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hdds.each do |hdd| %>
      <tr>
        <td><%= hdd.price %></td>
        <td><%= hdd.maker %></td>
        <td><%= hdd.series %></td>
        <td><%= hdd.model %></td>
	<td><%= hdd.size %></td>
        <td><%= hdd.interface %></td>
        <td><%= hdd.notes %></td>
        <td><%= link_to 'Show', hdd %></td>
        <td><%= link_to 'Edit', edit_hdd_path(hdd) %></td>
        <td><%= link_to 'Destroy', hdd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

